<%=form_with(model: @post_config, local: true, url: update_post_configs_leaderboards_path(@leaderboard)) do |f| %>
  <div class="field">
    <%= f.label(:channel, "Channel", class: 'label') %>
    <%= f.text_field(:channel, required: true, class: 'input') %>
  </div>

  <div class="field">
    <%= f.label(:webhook_url, "Webhook url", class: 'label') %>
    <%= f.url_field(:webhook_url, required: true, class: 'input') %>
    <p class="help">
      You can create one here: <%= link_to('my.slack.com', 'https://my.slack.com/services/new/incoming-webhook/') %>
    </p>
  </div>

  <div class="field">
    <%= f.label(:order_by, "Order by:", class: 'label') %>
    <label>
      <%= f.radio_button(:order_by, "stars", required: true) %>
      Stars
    </label>
    <label>
      <%= f.radio_button(:order_by, "score") %>
      Score
    </label>
  </div>

  <div class="field">
    <label class="checkbox">
      <%= f.check_box(:display_other) %>
      Display other stats
    </label>
  </div>

  <div class="level">
    <span class="level-item"></span>
    <%= f.button('Confirm', class: 'button is-primary') %>
    <span class="level-item"></span>
  </div>
<% end %>
